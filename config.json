{
    "name": "metalens",
    "n_gpu": 1,
    "arch": {
        "type": "ResSigRegression",
        "args": {
            "input_shape": 50,
            "output_shape":20,
            "last_activate": "sigmoid"
        }
    },
    "data_loader": {
        "type": "MyDataGen",
        "args":{
            "data_dir": "../dataset/50/",
            "csv_file": "data.csv",
            "thickness": 0.10,
            "polarization": "Ex",
            "unit_size":50,
            "rotate_augmentation":true,
            "overlap":true,
            "datatype":"amplitude",
            "train_test":"train",
            "shift_range":20,
            "taget_normalize":6.2832,
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0005,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse",
    "metrics": [
        "mae"
    ],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "patience": 4,
            "factor": 0.2,
            "min_lr": 1e-6
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "res/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}
